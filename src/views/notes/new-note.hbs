<div class="col md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h2>New Note Bostero</h2>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">

                <div class="form-group" class>
                    <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                </div>

                <div class="form-group" class>
                    <textarea name="description" placeholder="Description (a lo boca)" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Save bostero(sino se borra)
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>